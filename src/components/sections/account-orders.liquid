<div class="container pt-8 pb-4 md:pt-10 md:pb-20">
  <div class="flex flex-col gap-8 lg:flex-row lg:gap-32">
    <div class="w-full md:w-48">
      {%- render 'account-sidebar' -%}
    </div>
    <div class="md:flex-1">
      {%- render 'account-orders', empty_content: section.settings.empty_content -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Account Orders",
  "settings": [
    {
      "type": "richtext",
      "id": "empty_content",
      "label": "Empty Content",
      "info": "Content to be displayed when customer has not placed any orders"
    }
  ]
}
{% endschema %}
