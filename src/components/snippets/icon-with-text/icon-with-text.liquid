{%- if blocks.size > 0 -%}
  <div class="relative mx-auto px-6 py-8 lg:z-[-1] lg:py-12 lg:px-0 xl:px-[188px]">
    <div class="-mx-2 flex flex-wrap items-start justify-center gap-y-6 lg:-mx-8">
      {%- for block in blocks -%}
        {% render 'card',
          image: block.settings.icon,
          title: block.settings.content,
          url: block.settings.link,
          class: 'w-1/3 px-2 lg:w-1/6 lg:px-8 [&:nth-child(4)]:w-[calc((140/344)*100%)] [&:nth-child(5)]:w-[calc((140/344)*100%)] lg:[&:nth-child(4)]:w-1/6 lg:[&:nth-child(5)]:w-1/6 group',
          image_wrapper_class: 'w-16 h-16 aspect-1 mx-auto mb-3',
          title_class: 'text-text-xs uppercase font-bold text-center text-grey-900',
          image_class: 'group-hover:zoom'
        %}
      {%- endfor -%}
    </div>
  </div>
{%- endif -%}
