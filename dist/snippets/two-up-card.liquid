{% liquid
  assign card_class = 'w-full px-4 lg:px-8 py-6 lg:py-8 border-default border-b lg:w-1/2 lg:[&:nth-child(2)]:w-[calc((100%/2)+2px)] lg:[&:nth-child(2)]:border-l'
  assign card_content_class = 'flex items-center w-full h-full gap-[18px] lg:gap-[87.5px] p-4 rounded-2xl lg:px-8 lg:py-6 group'
%}
{%- if blocks.size > 0 -%}
  <div class="flex flex-col justify-center lg:flex-row">
    {%- for block in blocks -%}
      <div class="{{ card_class }}">
        {%- if block.settings.link != blank -%}
          <a class="{{ card_content_class }}" href="{{ block.settings.link }}" {%- if block.settings.background_color != blank -%}style="background-color: {{- block.settings.background_color -}}"{%- endif -%}>
        {%- else -%}
          <div class="{{ card_content_class }}" {%- if block.settings.background_color != blank -%}style="background-color: {{- block.settings.background_color -}}"{%- endif -%}>
        {%- endif -%}
          <div class="flex-1 pl-2">
            {%- if block.settings.title != blank -%}
              <h2 class="mb-1 h5 text-white lg:h4 lg:text-white">{{- block.settings.title -}}</h2>
            {%- endif -%}
            {%- if block.settings.description != blank -%}
              <div class="text-sm font-normal text-white lg:text-lg">{{- block.settings.description -}}</div>
            {%- endif -%}
          </div>
          <div class="relative overflow-hidden aspect-1 w-[80px] lg:w-[124px]">
            {%- render 'image',
              image: block.settings.image,
              class: 'hover:zoom duration-300 fit group-hover:zoom'
            -%}
          </div>
        {%- if block.settings.link != blank -%}
          </a>
        {%- else -%}
          </div>
        {%- endif -%}
      </div>
    {%- endfor -%}
  </div>
{%- endif -%}
