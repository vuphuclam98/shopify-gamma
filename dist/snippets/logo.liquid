{%- assign class = class | default: null -%}

<div class="flex justify-center truncate lg:flex-1 {{ class }}">
  <a href="/" title="{{- shop.name -}}" class="truncate text-center text-xl font-bold">
    {%- if settings.logo != blank -%}
      {%- render 'image', image: settings.logo, class: 'w-full h-auto' -%}
    {%- else -%}
      {{- shop.name -}}
    {%- endif -%}
  </a>
</div>
