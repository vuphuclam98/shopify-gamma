<script type="text/javascript" id="checkout-script">
  var GM_STATE_CHECKOUT = {
    shopify: {
      templateName: {{ template.name | json }}
    },
    customs: {
      badge: {% render 'get-custom-badge' %}
    }
    product: {
      items: {
        {%- for item in checkout.line_items -%}
          {{ forloop.index0 }}: {
            "tags": {{- item.product.tags | json -}}
          }{%- unless forloop.last -%},{% endunless %}
        {%- endfor -%}
      },
    }
  };
</script>
