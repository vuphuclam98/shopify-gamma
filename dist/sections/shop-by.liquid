{%- render 'shop-by',
  heading: section.settings.heading,
  border_top: section.settings.border_top,
  background_color: section.settings.background_color,
  blocks: section.blocks
-%}

{% schema %}
{
  "name": "Shop By",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop by category"
    },
    {
      "type": "checkbox",
      "id": "border_top",
      "label": "Border Top"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#F7F7F0"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "collection",
          "id": "category",
          "label": "Category"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Title"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Shop By",
      "category": "Card Grid",
      "blocks": [
        {
          "type": "category"
        },
        {
          "type": "category"
        },
        {
          "type": "category"
        },
        {
          "type": "category"
        }
      ]
    }
  ]
}
{% endschema %}
