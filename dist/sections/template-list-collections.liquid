<div class="my-8 flex flex-col items-center">
  <h1 class="text-3xl font-medium">
    {{ section.settings.title }}
  </h1>
  <div class="mx-auto my-3 max-w-6xl">
    <div class="grid grid-cols-1 gap-3 md:grid-cols-3">
      {%- for collection in collections -%}
        {%- if collection.all_products_count > 0 -%}
          <div class="w-full px-3 py-6">
            <div class="overflow-hidden border bg-white">
              <a href="{{ collection.url }}">
                <div class="h-80 overflow-hidden">
                  {%- if collection.featured_image != blank -%}
                    {%- assign collection_image = collection.featured_image -%}
                  {%- else -%}
                    {%- assign collection_image = collection.products.first.image -%}
                  {%- endif -%}
                  <img
                    class="h-full w-full transform object-cover transition duration-1000 ease-in-out hover:scale-105"
                    src="{{ collection_image | image_url: width: 240 }}"
                    alt="{{ collection.title | escape }}"
                    width="240"
                    height="240"
                    loading="lazy"
                  >
                </div>
              </a>
              <div class="bg-primary-700 p-4">
                <h2 class="text-xl">{{ collection.title }}</h2>
              </div>
            </div>
          </div>
        {%- else -%}
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Template List Collection",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Shop All"
    }
  ]
}
{% endschema %}
