{% render 'grid-card', heading: section.settings.heading, subheading: section.settings.subheading, blocks: section.blocks %}

{% schema %}
{
  "name": "Grid Card",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Personalise your gift"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Add a personalised message or curate your own customised gifts and give them a gift they will love."
    }
  ],
  "blocks": [
    {
      "name": "Card",
      "type": "card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Title"
        },
        {
          "type": "text",
          "id": "cta_text",
          "label": "CTA Text"
        },
        {
          "type": "url",
          "id": "cta_url",
          "label": "CTA Url"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Grid Card",
      "category": "Card Grid",
      "blocks": [
        {
          "type": "card"
        },
        {
          "type": "card"
        },
        {
          "type": "card"
        },
        {
          "type": "card"
        }
      ]
    }
  ]
}
{% endschema %}
